# ===============================================
# TaskFlow PRO - Variables de Entorno (Template)
# ===============================================
# Copia este archivo como '.env' y configura tus valores

# Base de datos PostgreSQL (Supabase)
DB_URL=jdbc:postgresql://HOST:PORT/DATABASE?prepareThreshold=0
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password

# JWT Secret (genera uno único para producción)
JWT_SECRET=una_clave_secreta_muy_larga_y_segura_minimo_64_caracteres

# Puerto del servidor (opcional, default: 8081)
SERVER_PORT=8081
